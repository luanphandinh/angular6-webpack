{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "app/*": ["app/*"],
      "@angular/*": ["../node_modules/@angular/*"],
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2016", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "jasmine",
      "node",
      "uglify-js",
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*"
  ]
}
